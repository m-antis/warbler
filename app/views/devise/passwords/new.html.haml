.section
  .container
    .columns.is-centered
      .column.is-4
        %h2.title.is-2 Forgot Your Password?
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: 'post' }) do |f|
          = f.error_notification
          .field
            .control
              = f.input :email,                                                                    
                required: true,
                autofocus: true,                       
                input_html: { class: "input" },
                wrapper: false,
                label_html: { class: "label" }
          = f.button :submit, "Send me password reset instructions", class: "button is-info"
        = render "devise/shared/links"
